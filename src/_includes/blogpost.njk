---
layout: base.njk
showHeader: true
showFooter: true
---
<article>
  {% if heroImage %}
  <div class="hero-image">
    <img width="1020" height="510" src="{{ heroImage }}" alt="" />
  </div>
  {% endif %}
  <div class="prose">
    <div class="title">
      <div class="date">
        <time datetime="{{ date | dateISO }}">{{ date | dateDisplay }}</time>
        {% if updatedDate %}
        <div class="last-updated-on">
          Last updated on <time datetime="{{ updatedDate | dateISO }}">{{ updatedDate | dateDisplay }}</time>
        </div>
        {% endif %}
      </div>
      <h1>{{ title }}</h1>
      <hr />
    </div>
    {{ content | safe }}
  </div>
</article>
